<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/black">

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2sp"
        android:text="@string/themename"
        android:id="@+id/button"

        style="?android:attr/colorButtonNormal"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/secondary_text_light"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHighlight="@android:color/primary_text_dark_nodisable"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2sp"
        android:id="@+id/button1"

        style="?android:attr/colorButtonNormal"
        android:text="@string/themename2"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/secondary_text_light"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHighlight="@android:color/primary_text_dark_nodisable"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2sp"
        android:id="@+id/button2"

        style="?android:attr/colorButtonNormal"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/secondary_text_light"
        android:textColor="@android:color/primary_text_dark"
        android:textColorHighlight="@android:color/primary_text_dark_nodisable"
        android:text="@string/themename1"
        android:layout_above="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_themeimage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>